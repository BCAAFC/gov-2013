doctype 5
html
	head
		title Gathering Our Voices 2013 - #{title}
		meta(charset="utf-8")
		meta(http-equiv="X-UA-Compatible", content="IE=edge,chrome=1")
		meta(name="viewport", content="width=device-width, initial-scale=1.0")
		
		// Info for Engines
		meta(name="description", content="Gathering Our Voices is an annual conference in BC for Aboriginal Youth. This years confernce theme will focus on Health and will be held from March 19-22, 2013 in Penticton, BC.")
		meta(name="author", content="Andrew Hobden")


		// HTML5 shim, because IE's are horrible.
		//if lt IE 9
			script(src='http://html5shim.googlecode.com/svn/trunk/html5.js')


		// CSS Stuff
		link(href="//netdna.bootstrapcdn.com/bootswatch/2.1.1/united/bootstrap.min.css", rel="stylesheet")
		link(href="/css/timepicker.css", rel="stylesheet")
		style(type="text/css")
			popover {
				z-index: 99999;
			}
			@media (min-width:980px) {
				body {
						padding-top: 40px;
				}
			}

		// Jquery
		script(src="//ajax.googleapis.com/ajax/libs/jquery/1.8.2/jquery.min.js")
		
		// Bootstrap
		script(src="//netdna.bootstrapcdn.com/twitter-bootstrap/2.2.2/js/bootstrap.min.js")
		script(src="/js/bootstrap-timepicker.js")

		// Google Analytics Tracker
		script(type="text/javascript")
				var _gaq = _gaq || [];
				_gaq.push(['_setAccount', 'UA-35795966-1']);
				_gaq.push(['_trackPageview']);

				(function() {
					var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
					ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
					var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
				})();

	body
		// Navbar. This does not need a container.
		.navbar.navbar.navbar-fixed-top
			.navbar-inner
				a.brand(style="font-family: Rancho", href="/") Gathering Our Voices
				ul.nav
					li
						a(href='/')
							i.icon-home.icon-white
							| Home

					li.dropdown
						a.dropdown-toggle#workshopDrop(href="#", data-toggle="dropdown")
							i.icon-list-alt.icon-white
							| Workshops
							b.caret
						ul.dropdown-menu(aria-labelledby="workshopDrop")
							li
								a(href="/workshops/wednesday") Wednesday
							li
								a(href="/workshops/thursday") Thursday
					li
						a(href="/privacy")
							i.icon-eye-open.icon-white
							| Privacy Policy
				ul.nav.pull-right
					if group
						if group.internal.admin
							li
								a(href="/admin")
									i.icon-hdd.icon-white
									| Admin
					if group
						li.dropdown
							a.dropdown-toggle#accountDrop(href='#', data-toggle="dropdown")
								i.icon-edit.icon-white
								| Account
								b.caret
							ul.dropdown-menu(aria-labelledby="accountDrop")
								li
									a(href="/account") Management
								li
									a(href="#add", data-toggle="modal") Add a member
								li
									a(href="/account#billing") Payment Details
						li
							form(action="/api/logout", method="post", style="text-align: center; margin: 0px 0px 0px 0px;")
								input.btn.btn-small.btn-danger(type="submit", value="Log Out")
					else
						li
							form(action="/", style="text-align: center; margin: 0px 0px 0px 0px;")
								input.btn.btn-success.btn-small(type="submit", value="Login")
		.container
			.row
				div(style="text-align: center;")
					img(src="/img/logos/gov.png")
			block content
			.row
				.span6.offset4
					h4 Proudly supported by the following Organizations:
			.row
				div(style="text-align: center;")
					a(href="http://www.bcaafc.com")
						img(src="/img/logos/bcaafc.png")
					a(href="http://www.friendshipcentre.ca/")
						img(src="/img/logos/ooknakane.png")
		include elements/addMember
		script
			$(document).ready(function(){
				$('a[href="' + window.location.hash + '"]').click()
			});
			$('input').popover({
				placement: 'right',
				trigger: 'focus',
				html: 'true'
			})