extends ../layout

block content
	.row-fluid
		h1= title
		form.form-horizontal(action="/api/signup", method='post')
			fieldset
				legend Login Information
				p (You should really remember this!)
				.well
					.control-group
						label.control-label Email
						.controls
							input(type="text", name="email", placeholder="email")
					.control-group
						label.control-label Password
						.controls
							input(type="password", name="pass", placeholder="Pass")
					.control-group
						label.control-label Password (again!)
						.controls
							input(type="password", name="passConfirm", placeholder="Pass Confirmation")

			fieldset
				legend Contact Information
				.well
					.control-group
						label.control-label Name
						.controls
							input(type="text", name="name", placeholder="Name")
					.control-group
						label.control-label Phone #
						.controls
							input(type="text", name="phone", placeholder="Phone")

			fieldset
				legend Group Information
				.well
					.control-group
						label.control-label Affiliation
						.controls
							input(type="text", name="affiliation", placeholder="Affiliation")
					.control-group
						label.control-label Address
						.controls
							input(type="text", name="address", placeholder="Address")
					.control-group
						label.control-label City
						.controls
							input(type="text", name="city", placeholder="City")
					.control-group
						label.control-label Province
						.controls
							input(type="text", name="province", placeholder="Province")
					.control-group
						label.control-label Postal Code
						.controls
							input(type="text", name="postalCode", placeholder="Postal Code")
					.control-group
						label.control-label Fax
						.controls
							input(type="text", name="fax", placeholder="Fax")

			br
			input.btn.btn-block.btn-large.btn-primary(type="submit")